---
export interface Props {
  currentPage?: 'home' | 'about' | 'projects' | 'blog' | 'contact';
}

const { currentPage = 'home' } = Astro.props;
---

<header id="header-container">
  <a id="header-logo" href="/">
    <span>SATANSHU</span>
  </a>
  
  <div id="header-right">
    <button id="header-talk-btn">
      <a href="#"></a>
      <div id="header-talk-container">
        <span id="header-talk-btn-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 16 16">
            <path stroke="currentColor" stroke-linecap="round" stroke-width="1.5" d="M3.757 8h8.486m0 0L8 3.757M12.243 8L8 12.243"></path>
          </svg>
        </span>
        <span id="header-talk-btn-text">Let's talk</span>
        <span id="header-talk-btn-dots">
          <span class="header-talk-btn-dot"></span>
        </span>
      </div>
    </button>
    
    <button id="header-menu-btn" aria-label="Menu button">
      <div id="header-menu-btn-inner">
        <span id="header-menu-btn-text">Menu</span>
        <span id="header-menu-btn-text-close">Close</span>
        <div id="header-menu-btn-dots">
          <span class="header-menu-btn-dot"></span>
          <span class="header-menu-btn-dot"></span>
        </div>
      </div>
    </button>
  </div>
  
  <div id="header-menu">
    <div id="header-menu-links">
      <a class={`header-menu-link ${currentPage === 'home' ? '--active' : ''}`} href="#">
        <div class="header-menu-link-background"></div>
        <div class="header-menu-link-inner">
          <span class="header-menu-link-text">Home</span>
          <span class="header-menu-link-text-clone">Home</span>
          <svg class="header-menu-link-svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.515 12h16.97m0 0L13.01 4.525M20.485 12l-7.475 7.476"></path>
          </svg>
        </div>
      </a>
      
      <a class={`header-menu-link ${currentPage === 'about' ? '--active' : ''}`} href="#">
        <div class="header-menu-link-background"></div>
        <div class="header-menu-link-inner">
          <span class="header-menu-link-text">About me</span>
          <span class="header-menu-link-text-clone">About me</span>
          <svg class="header-menu-link-svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.515 12h16.97m0 0L13.01 4.525M20.485 12l-7.475 7.476"></path>
          </svg>
        </div>
      </a>
      
      <a class={`header-menu-link ${currentPage === 'projects' ? '--active' : ''}`} href="#">
        <div class="header-menu-link-background"></div>
        <div class="header-menu-link-inner">
          <span class="header-menu-link-text">Projects</span>
          <span class="header-menu-link-text-clone">Projects</span>
          <svg class="header-menu-link-svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.515 12h16.97m0 0L13.01 4.525M20.485 12l-7.475 7.476"></path>
          </svg>
        </div>
      </a>
      
      <button class={`header-menu-link ${currentPage === 'contact' ? '--active' : ''}`}>
        <div class="header-menu-link-background"></div>
        <div class="header-menu-link-inner">
          <span class="header-menu-link-text">Contact</span>
          <span class="header-menu-link-text-clone">Contact</span>
          <svg class="header-menu-link-svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.515 12h16.97m0 0L13.01 4.525M20.485 12l-7.475 7.476"></path>
          </svg>
        </div>
      </button>
    </div>
    
    <button id="header-menu-talk">
      <a href="#"></a>
      <div id="header-menu-text">Let's talk</div>
      <svg id="header-menu-talk-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path fill="#fff" d="M0 0h24v24H0z"></path>
        <rect width="18" height="18" x="3" y="3" stroke="#000" stroke-width="1.5" rx="2"></rect>
        <rect width="12" height="4" x="6" y="14" fill="#000" rx="2"></rect>
        <path stroke="#000" stroke-linecap="round" stroke-width="1.5" d="M7 7h10M7 10h10"></path>
      </svg>
    </button>
    
    <a id="header-menu-blog" href="#">
      <div id="header-menu-blog-inner">
        <div id="header-menu-blog-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" viewBox="0 0 24 24">
            <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 2v4a2 2 0 0 0 2 2h4m-6-6H5a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8m-5-6 5 5M7 10h10M7 14h10M7 18h4"></path>
          </svg>
        </div>
        <div id="header-menu-blog-texts">
          <div id="header-menu-blog-text">Blog</div>
          <div id="header-menu-blog-text-clone">Blog</div>
        </div>
        <svg id="header-menu-blog-arrow" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 20 20 4m0 0v14.096M20 4H5.904"></path>
        </svg>
        <svg id="header-menu-blog-arrow2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 20 20 4m0 0v14.096M20 4H5.904"></path>
        </svg>
      </div>
    </a>
  </div>
</header>

<style>
:root {
  --header-color: #0016ec;
  --header-text-color: #000000;
  --header-size: clamp(1rem, 1vw, 2rem);
  --base-padding-x: max(5vw, 40px);
  --base-padding-y: clamp(30px, 4vw, 50px);
  --color-white: #fff;
  --color-black: #000;
  --color-grey-blue: #2b2e3a;
  --color-dark-white: #e4e6ef;
}

@media (max-width: 812px) {
  :root {
    --base-padding-x: 25px;
    --base-padding-y: 25px;
  }
}

@media (max-width: 400px) {
  :root {
    --base-padding-x: 15px;
    --base-padding-y: 15px;
  }
}

#header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--base-padding-y) var(--base-padding-x);
  padding-bottom: 0.1em;
  position: fixed;
  width: 100%;
  top: 0;
  background: transparent;
  z-index: 100;
}

#header-logo {
  z-index: 1;
  text-decoration: none;
  color: var(--header-color);
}

#header-logo span {
  font-family: 'Inter', system-ui, sans-serif;
  font-weight: 500;
  font-size: 1.85em;
  letter-spacing: -0.02em;
}

@media (max-width: 812px) {
  #header-logo span {
    font-size: 1.5em;
  }
}

#header-right {
  position: relative;
  display: flex;
  gap: 1.5em;
  will-change: transform;
}

#header-talk-btn,
#header-menu-btn {
  font-size: 0.875em;
  border-radius: 6.25em;
  padding: 0 1.125em 0 1.625em;
  font-weight: 500;
  text-transform: uppercase;
  border: none;
  height: 3.2em;
  cursor: pointer;
  transition: color 0.4s, background-color 0.4s;
}

@media (max-width: 812px) {
  #header-talk-btn,
  #header-menu-btn {
    position: relative;
    width: 3.2em;
    padding: 0;
  }
  
  #header-talk-btn {
    display: none;
  }
}

#header-talk-btn {
  position: relative;
  background: var(--color-grey-blue);
  color: var(--color-white);
  overflow: hidden;
}

#header-talk-btn a {
  position: absolute;
  inset: 0;
  z-index: 1;
}

@media (hover: hover) {
  #header-talk-btn:hover {
    background: var(--header-color);
  }
  
  #header-talk-btn:hover #header-talk-btn-dots {
    transform: scale(0) translateZ(0);
  }
  
  #header-talk-btn:hover #header-talk-btn-text {
    transform: translate3d(1.5em, 0, 0);
  }
  
  #header-talk-btn:hover #header-talk-btn-arrow {
    transform: translateZ(0);
  }
}

#header-talk-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 0.625em;
  white-space: nowrap;
}

@media (max-width: 812px) {
  #header-talk-btn-text {
    display: none;
  }
}

#header-talk-btn-text {
  transition: transform cubic-bezier(0.4, 0, 0.1, 1) 0.3s;
}

#header-talk-btn-arrow {
  position: absolute;
  top: calc(50% - 0.5em);
  left: 1.2em;
  transform: translate3d(-2.5em, 0, 0);
  width: 1em;
  height: 1em;
  transition: transform cubic-bezier(0.4, 0, 0.1, 1) 0.3s;
}

@media (max-width: 812px) {
  #header-talk-btn-arrow {
    display: none;
  }
}

#header-talk-btn-arrow svg {
  width: 100%;
  height: 100%;
}

#header-talk-btn-dots {
  position: relative;
  width: 1.15em;
  height: 1.15em;
  transition: transform cubic-bezier(0.4, 0, 0.1, 1) 0.1s;
  transform: scale(0.9) translateZ(0);
}

.header-talk-btn-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: block;
  width: 0.3125em;
  height: 0.3125em;
  background: var(--color-white);
  border-radius: 100%;
}

#header-menu-btn {
  background: var(--color-dark-white);
  color: var(--color-black);
}

@media (hover: hover) {
  #header-menu-btn:hover {
    background: var(--color-white);
    color: var(--header-text-color);
  }
  
  #header-menu-btn:hover #header-menu-btn-dots {
    transform: translateY(-0.1em) translateZ(0) rotate(270deg);
  }
}

#header-menu-btn.--opened {
  color: var(--header-text-color);
  background: var(--color-white);
}

#header-menu-btn.--opened #header-menu-btn-dots {
  transform: translateY(-0.1em) translateZ(0) rotate(270deg);
}

#header-menu-btn.--opened #header-menu-btn-text {
  transform: translate3d(0, -100%, 0);
}

#header-menu-btn.--opened #header-menu-btn-text-close {
  transform: translateZ(0);
}

#header-menu-btn-inner {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
  gap: 0.625em;
}

#header-menu-btn-text {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.1, 1);
  line-height: 1.2em;
}

@media (max-width: 812px) {
  #header-menu-btn-text {
    display: none;
  }
}

#header-menu-btn-text-close {
  position: absolute;
  transform: translate3d(0, 100%, 0);
  left: 0;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.1, 1);
}

@media (max-width: 812px) {
  #header-menu-btn-text-close {
    display: none;
  }
}

#header-menu-btn-dots {
  position: relative;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.1, 1);
  transform: translateZ(0) rotate(180deg);
  width: 1.15em;
  height: 1.15em;
}

@media (max-width: 812px) {
  #header-menu-btn-dots {
    font-size: 1.4em;
  }
}

#header-menu-btn-dots .header-menu-btn-dot {
  position: absolute;
  display: inline-block;
  width: 0.3125em;
  height: 0.3125em;
  background: currentColor;
  border-radius: 100%;
  transition: background-color 0.4s;
  transform: translateY(-50%);
}

#header-menu-btn-dots .header-menu-btn-dot:first-child {
  left: 0.1em;
  top: 50%;
}

#header-menu-btn-dots .header-menu-btn-dot:last-child {
  right: 0.1em;
  top: 50%;
}

#header-menu {
  position: absolute;
  top: calc(var(--base-padding-y) + var(--header-size) * 3.1 + 0.5em);
  right: var(--base-padding-x);
  width: 19.38em;
  display: flex;
  flex-direction: column;
  gap: 0.625em;
  pointer-events: none;
  color: var(--color-black);
}

@media (max-width: 1000px) {
  #header-menu {
    top: calc(var(--base-padding-y) * 2 + 3 * var(--header-size));
  }
}

@media (max-width: 812px) {
  #header-menu {
    width: calc(100% - var(--base-padding-x) * 2);
  }
}

#header-menu input,
#header-menu a,
#header-menu button {
  pointer-events: none;
}

#header-menu #header-menu-links,
#header-menu #header-menu-talk,
#header-menu #header-menu-blog {
  will-change: transform;
  transition: transform 0.5s 0.08s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0.08s cubic-bezier(0.4, 0, 0.1, 1);
  transform: translate3d(0, 5.5em, 0) rotate(3.5deg);
  opacity: 0;
}

#header-menu #header-menu-talk,
#header-menu #header-menu-blog {
  transition: transform 0.5s 0.04s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0.04s cubic-bezier(0.4, 0, 0.1, 1);
  transform: translate3d(0, 7.75em, 0) rotate(-3.5deg);
}

#header-menu #header-menu-blog {
  transition: transform 0.5s 0.02s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0.02s cubic-bezier(0.4, 0, 0.1, 1);
}

#header-menu.--opened #header-menu-links,
#header-menu.--opened #header-menu-talk,
#header-menu.--opened #header-menu-blog {
  transition: transform 0.5s 0s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0s cubic-bezier(0.4, 0, 0.1, 1);
  transform: translateZ(0);
  opacity: 1;
}

#header-menu.--opened #header-menu-talk {
  transition: transform 0.5s 0.02s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0.02s cubic-bezier(0.4, 0, 0.1, 1);
}

#header-menu.--opened #header-menu-blog {
  transition: transform 0.5s 0.04s cubic-bezier(0.4, 0, 0.1, 1), opacity 0.5s 0.04s cubic-bezier(0.4, 0, 0.1, 1);
}

#header-menu.--opened input,
#header-menu.--opened a,
#header-menu.--opened button {
  pointer-events: auto;
}

#header-menu-links {
  display: flex;
  flex-direction: column;
  text-transform: uppercase;
  background: var(--color-white);
  border-radius: 0.625em;
  padding: 1em 0.3125em;
}

#header-menu-talk {
  background: var(--color-white);
  color: var(--color-black);
  padding: 1.875em;
  border-radius: 0.625em;
  align-items: center;
  justify-content: space-between;
  display: none;
  position: relative;
}

#header-menu-talk a {
  position: absolute;
  inset: 0;
  z-index: 1;
}

@media (max-width: 812px) {
  #header-menu-talk {
    display: flex;
  }
}

#header-menu-text {
  font-size: 1.625em;
  text-transform: uppercase;
}

#header-menu-talk-icon {
  height: 1.5em;
  width: 1.5em;
}

.header-menu-link {
  display: inline-block;
  position: relative;
  overflow: hidden;
  width: 100%;
  padding: 1em 1.625em;
  line-height: 1;
  cursor: pointer;
  pointer-events: none;
  color: var(--color-black);
  text-decoration: none;
  background: none;
  border: none;
  text-align: start;
}

.header-menu-link:before {
  content: "";
  position: absolute;
  top: calc(50% - 0.25em);
  right: 2em;
  background: var(--color-black);
  width: 0.5em;
  height: 0.5em;
  border-radius: 100%;
  transition: 0.3s transform cubic-bezier(0.4, 0, 0.1, 1);
  transform: scale(0);
}

.header-menu-link.--active {
  pointer-events: none !important;
}

.header-menu-link.--active:before {
  transform: scale(1);
}

@media (hover: hover) {
  .header-menu-link:hover {
    color: var(--header-text-color);
  }
  
  .header-menu-link:hover .header-menu-link-text {
    transform: translate3d(0, -100%, 0);
  }
  
  .header-menu-link:hover .header-menu-link-text-clone {
    transform: translateZ(0);
  }
  
  .header-menu-link:hover .header-menu-link-background {
    transform: scale(1);
    opacity: 0.1;
  }
  
  .header-menu-link:hover .header-menu-link-svg {
    transform: scale(1);
    transition: 0.4s color, 0.2s 0.2s transform cubic-bezier(0.4, 0, 0.1, 1);
  }
  
  .header-menu-link:hover.--active:before {
    transform: scale(0);
  }
}

.header-menu-link-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  background: var(--header-color);
  border-radius: 6.25em;
  transition: 0.3s opacity, 0.4s transform cubic-bezier(0.4, 0, 0.1, 1);
  transform: scale(0.85);
}

.header-menu-link-text {
  display: inline-block;
  position: relative;
  transition: 0.4s color, 0.4s transform cubic-bezier(0.4, 0, 0.1, 1);
  z-index: 1;
  font-size: 1.625em;
  text-transform: uppercase;
}

.header-menu-link-svg {
  position: absolute;
  height: 1.5em;
  width: 1.5em;
  top: calc(50% - 0.75em);
  right: 0;
  transition: 0.4s color, 0.2s transform cubic-bezier(0.4, 0, 0.1, 1);
  transform: scale(0);
}

.header-menu-link-inner {
  position: relative;
  overflow: hidden;
}

.header-menu-link-text-clone {
  position: absolute;
  transition: 0.4s color, 0.4s transform cubic-bezier(0.4, 0, 0.1, 1);
  z-index: 1;
  top: 0;
  left: 0;
  font-size: 1.625em;
  transform: translate3d(0, 100%, 0);
  text-transform: uppercase;
}

#header-menu-blog {
  cursor: pointer;
  padding: 1.25em 1.875em;
  background: var(--color-black);
  border-radius: 0.625em;
  pointer-events: none;
  text-decoration: none;
  display: block;
}

@media (hover: hover) {
  #header-menu-blog:hover #header-menu-blog-arrow {
    transform: translate3d(1.5em, -2.375em, 0);
  }
  
  #header-menu-blog:hover #header-menu-blog-arrow2 {
    transform: translateZ(0);
  }
  
  #header-menu-blog:hover #header-menu-blog-text {
    transform: translate3d(0, -100%, 0);
  }
  
  #header-menu-blog:hover #header-menu-blog-text-clone {
    transform: translateZ(0);
  }
}

#header-menu-blog-inner {
  position: relative;
  display: flex;
  align-items: center;
  gap: 1.5em;
  overflow: hidden;
}

#header-menu-blog-icon {
  height: 2.375em;
  width: 2.375em;
}

#header-menu-blog-icon svg {
  height: 100%;
  width: 100%;
}

#header-menu-blog-texts {
  position: relative;
  width: 100%;
  color: var(--color-white);
  font-size: 1.625em;
  text-transform: uppercase;
}

#header-menu-blog-text {
  transition: 0.4s transform cubic-bezier(0.4, 0, 0.1, 1);
}

#header-menu-blog-text-clone {
  position: absolute;
  top: 0;
  transform: translate3d(0, 100%, 0);
  transition: 0.4s transform cubic-bezier(0.4, 0, 0.1, 1);
}

#header-menu-blog-arrow {
  flex-shrink: 0;
  transform: translateZ(0);
  transition: 0.3s transform cubic-bezier(0.4, 0, 0.1, 1);
  height: 1.5em;
  width: 1.5em;
}

#header-menu-blog-arrow2 {
  position: absolute;
  right: 0;
  top: calc(50% - 0.75em);
  transform: translate3d(-1.5em, 2.375em, 0);
  transition: 0.3s transform cubic-bezier(0.4, 0, 0.1, 1);
}
</style>

<script>
  const menuBtn = document.getElementById('header-menu-btn');
  const menu = document.getElementById('header-menu');
  
  menuBtn?.addEventListener('click', () => {
    menuBtn.classList.toggle('--opened');
    menu?.classList.toggle('--opened');
  });
</script>
