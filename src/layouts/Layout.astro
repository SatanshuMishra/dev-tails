---
import LayoutBase from "./LayoutBase.astro";
import Navigation from "../components/Navigation.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<LayoutBase frontmatter={{ title }}>
	<Navigation>
		<ThemeToggle />
	</Navigation>
	<slot />
</LayoutBase>
