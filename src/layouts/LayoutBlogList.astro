---
import LayoutBase from "./LayoutBase.astro";
import NavigationBlog from "../components/NavigationBlog.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<LayoutBase frontmatter={{ title }}>
	<NavigationBlog>
		<ThemeToggle />
	</NavigationBlog>
	<slot />
</LayoutBase>
